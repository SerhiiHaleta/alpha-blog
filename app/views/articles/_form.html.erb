<div class="container">
  <div class="row justify-content-center text-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, local: true, class: "shadow mb-3 p-3 bg-info rounded text-start") do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Make you selection from the list below (can be empty)"}, {multiple: true, class: "form-select shadow rounded"}) %>
          </div>
        </div>

        <div class="form-group row  justify-content-center">
          <%= f.submit class: "btn btn-outline-light col-2 btn-lg" %>
        </div>

      <% end %>
    </div>

    <%= link_to "[Cancel and return to articles listing]", articles_path, class: "text-info" %>
  </div>
</div>
