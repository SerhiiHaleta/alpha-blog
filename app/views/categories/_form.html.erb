<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, local: true, class: "shadow mb-3 p-3 bg-info rounded text-start") do |f| %>
  <div class="form-group row">
    <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %><br/>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
    </div>
  </div>

  <div class="form-group row  justify-content-center">
    <%= f.submit class: "btn btn-outline-light col-2 btn-lg mt-2" %>
  </div>

<% end %>
