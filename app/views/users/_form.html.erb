<div class="container">
  <div class="row justify-content-center text-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, local: true, class: "shadow mb-3 p-3 bg-info rounded text-start") do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>


        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="form-group row  justify-content-center">
          <%= f.submit "Sign up", class: "btn btn-outline-light col-2 btn-lg" %>
        </div>

      <% end %>
    </div>

    <%= link_to "[Cancel and return to articles listing]", articles_path, class: "text-info" %>
  </div>
</div>
